DESCRIPTION="Morse code training program"
HOMEPAGE="http://www.catb.org/~esr/${PN}/"
SRC_URI="http://www.catb.org/~esr/${PN}/${P}.tar.gz"

src_compile() {
	lndirs
	cd ${B}
	cygmake DEVICE=OSS morse QSO
}

src_test() {
	cd ${B}
	make -k testmorse
	make -k testqso
}

src_install() {
	cd ${B}
	dobin *.exe
	doman *.1
}
